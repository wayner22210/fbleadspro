{
  "manifest_version": 3,
  "name": "FBLeadsPro",
  "version": "0.9.3",
  "description": "Extract Facebook group members and sync to your dashboard.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.facebook.com/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "FBLeadsPro"
  }
}
